<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.depromeet.bds.component.BdsInputChip
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Bds.InputChip.Primary.Default"
        app:bds_text="용인시 기흥구" />

    <com.depromeet.bds.component.BdsInputChip
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Bds.InputChip.Primary.Filled"
        app:bds_text="용인시 기흥구" />

    <com.depromeet.bds.component.BdsInputChip
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Bds.InputChip.Secondary.Default"
        app:bds_text="용인시 기흥구" />

    <com.depromeet.bds.component.BdsInputChip
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Bds.InputChip.Secondary.Filled"
        app:bds_text="용인시 기흥구" />
</LinearLayout>
