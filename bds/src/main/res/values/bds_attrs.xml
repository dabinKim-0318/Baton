<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BdsView">
        <attr name="isSelected" format="boolean" />
        <attr name="isEnabled" format="boolean" />
        <attr name="bds_textAppearance" />

        <attr name="bdsRadius" format="dimension" />
        <attr name="bdsBorderColor" format="color" />
        <attr name="bdsBorderWidth" format="dimension" />
        <attr name="bdsBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="BdsLinearLayout">
        <attr name="bdsRadius" />
        <attr name="bdsBorderColor" />
        <attr name="bdsBorderWidth" />
        <attr name="bdsBackgroundColor" />
    </declare-styleable>

    <declare-styleable name="BdsTextView">
        <attr name="bds_text" format="string" />
        <attr name="bds_textAppearance" format="reference" />
    </declare-styleable>

    <declare-styleable name="BdsFilter">
        <attr name="isSelected" />
        <attr name="isEnabled" />
        <attr name="bds_textAppearance" />
        <attr name="bds_text" />
        <attr name="bds_startDrawable" format="reference" />
        <attr name="bds_endDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="BdsButton">
        <attr name="isEnabled" />
        <attr name="bds_text" />
        <attr name="bds_startDrawable" />
        <attr name="bds_endDrawable" />
    </declare-styleable>

    <declare-styleable name="BdsChoiceChip">
        <attr name="bds_text" />
        <attr name="isOn" format="boolean" />
        <attr name="shape" format="enum">
            <enum name="outlined" value="0" />
            <enum name="filled" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BdsSearchBar">
        <attr name="isSelected" />
        <attr name="isEnabled" />
        <attr name="isFilled" format="boolean" />
        <attr name="bds_text" />
        <attr name="bds_placeholder_text" format="string" />
    </declare-styleable>

    <declare-styleable name="BdsInputChip">
        <attr name="bds_text" />
    </declare-styleable>

    <declare-styleable name="BdsActionChip">
        <attr name="bds_text" />
        <attr name="isEnabled" />
    </declare-styleable>

    <declare-styleable name="BdsTag">
        <attr name="bds_text" />
    </declare-styleable>



    <declare-styleable name="BdsSlider">
        <attr name="bds_progress" format="integer"/>
        <attr name="bds_max"  format="integer"/>
    </declare-styleable>


    <declare-styleable name="BdsRangeSlider">
        <attr name="bds_progress" />
        <attr name="bds_range_min" format="float"/>
        <attr name="bds_range_max" format="float"/>
        <attr name="bds_left" format="integer" />
        <attr name="bds_right" format="integer" />
    </declare-styleable>



    <declare-styleable name="BdsTitleAppBar">
        <attr name="bds_title" format="string" />
        <attr name="bds_icon" format="reference" />
        <attr name="bds_additional_icon" format="reference" />
        <attr name="bds_button" format="string" />
    </declare-styleable>

    <declare-styleable name="BdsBackwardAppBar">
        <attr name="bds_title" />
        <attr name="bds_icon" />
        <attr name="bds_backward_icon" format="reference" />
        <attr name="bds_button" />
    </declare-styleable>
</resources>
