<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.HomeFragment">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/mt_home_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_home_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen24"
                    android:src="@drawable/ic_logo"
                    app:layout_constraintBottom_toBottomOf="@id/tv_home_location"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_home_location" />

                <TextView
                    android:id="@+id/tv_home_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/home_title_location"
                    android:textAppearance="?headline2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/iv_home_notifications"
                    app:layout_constraintStart_toStartOf="@+id/iv_home_logo"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_home_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen24"
                    android:src="@drawable/ic_notifications"
                    app:layout_constraintBottom_toBottomOf="@id/tv_home_location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_home_location" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.MaterialToolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mt_home_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctl_home_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?primary50"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_home_banner_title_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen16"
                        android:layout_marginTop="@dimen/dimen56"
                        android:text="@string/home_banner_title_one"
                        android:textAppearance="?display4"
                        android:textColor="?wh100"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_home_banner_title_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_banner_title_two"
                        android:textAppearance="?display4"
                        android:textColor="?wh100"
                        app:layout_constraintStart_toStartOf="@id/tv_home_banner_title_one"
                        app:layout_constraintTop_toBottomOf="@id/tv_home_banner_title_one" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_home_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen16"
                        android:layout_marginBottom="@dimen/dimen36"
                        android:background="@drawable/temp_button"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingHorizontal="@dimen/dimen16"
                        android:paddingVertical="@dimen/dimen8"
                        android:text="@string/home_banner_see_more"
                        android:textAppearance="?headline4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_home_banner_title_two"
                        app:layout_constraintTop_toBottomOf="@id/tv_home_banner_title_two" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctl_home_specific_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen16"
                    android:layout_marginTop="@dimen/dimen24"
                    app:layout_constraintTop_toBottomOf="@id/ctl_home_banner">

                    <View
                        android:id="@+id/view_home_specific_gym"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="?primary30"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_home_specific_gym"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen8"
                        android:text="@string/home_gym"
                        android:textAppearance="?caption1"
                        android:textColor="?bk100"
                        app:layout_constraintEnd_toEndOf="@id/view_home_specific_gym"
                        app:layout_constraintStart_toStartOf="@id/view_home_specific_gym"
                        app:layout_constraintTop_toBottomOf="@id/view_home_specific_gym" />

                    <View
                        android:id="@+id/view_home_specific_pt"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="?primary30"
                        app:layout_constraintEnd_toStartOf="@+id/view_home_specific_pilates"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/view_home_specific_gym"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_home_specific_pt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen8"
                        android:text="@string/home_pt"
                        android:textAppearance="?caption1"
                        android:textColor="?bk100"
                        app:layout_constraintEnd_toEndOf="@id/view_home_specific_pt"
                        app:layout_constraintStart_toStartOf="@id/view_home_specific_pt"
                        app:layout_constraintTop_toBottomOf="@id/view_home_specific_pt" />

                    <View
                        android:id="@+id/view_home_specific_pilates"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="?primary30"
                        app:layout_constraintEnd_toStartOf="@+id/view_home_specific_etc"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/view_home_specific_pt"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_home_specific_pilates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen8"
                        android:text="@string/home_pilates"
                        android:textAppearance="?caption1"
                        android:textColor="?bk100"
                        app:layout_constraintEnd_toEndOf="@id/view_home_specific_pilates"
                        app:layout_constraintStart_toStartOf="@id/view_home_specific_pilates"
                        app:layout_constraintTop_toBottomOf="@id/view_home_specific_pilates" />

                    <View
                        android:id="@+id/view_home_specific_etc"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="?primary30"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_home_specific_etc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen8"
                        android:text="@string/home_etc"
                        android:textAppearance="?caption1"
                        android:textColor="?bk100"
                        app:layout_constraintEnd_toEndOf="@id/view_home_specific_etc"
                        app:layout_constraintStart_toStartOf="@id/view_home_specific_etc"
                        app:layout_constraintTop_toBottomOf="@id/view_home_specific_etc" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_home_near_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen24"
                    android:text="@string/home_near_ticket"
                    android:textAppearance="?headline1"
                    app:layout_constraintStart_toStartOf="@id/ctl_home_specific_ticket"
                    app:layout_constraintTop_toBottomOf="@id/ctl_home_specific_ticket" />

                <HorizontalScrollView
                    android:id="@+id/hsv_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen12"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_home_near_ticket">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chip_group_home"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:chipSpacingHorizontal="@dimen/dimen8"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_home_alignment"
                                style="@style/Chip.Entry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen16"
                                android:text="@string/filter_alignment"
                                android:textAppearance="?body3" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_home_ticket_kind"
                                style="@style/Chip.Entry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/filter_ticket_kind"
                                android:textAppearance="?body3" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_home_term"
                                style="@style/Chip.Entry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/filter_term"
                                android:textAppearance="?body3" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_home_transaction_method"
                                style="@style/Chip.Entry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/filter_transaction_method"
                                android:textAppearance="?body3" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_home_additional_options"
                                style="@style/Chip.Entry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/filter_additional_options"
                                android:textAppearance="?body3" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_home_filter_hashtag"
                                style="@style/Chip.Entry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen16"
                                android:text="@string/filter_hashtag"
                                android:textAppearance="?body3" />
                        </com.google.android.material.chip.ChipGroup>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </HorizontalScrollView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen8"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/ctl_home_specific_ticket"
                    app:layout_constraintStart_toStartOf="@+id/ctl_home_specific_ticket"
                    app:layout_constraintTop_toBottomOf="@+id/hsv_home"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_ticket">

                </androidx.recyclerview.widget.RecyclerView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen24"
            android:layout_marginBottom="@dimen/dimen12"
            android:backgroundTint="?primary50"
            android:src="@drawable/ic_pencil"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@null">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>