<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Filter BottomSheetDialog  -->
    <style name="BottomSheetDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--  Filter TabLayout  -->
    <style name="TabWidget" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="tabTextAppearance">?headline2</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabSelectedTextColor">?grey_scale80</item>
        <item name="tabTextColor">?grey_scale60</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/blue50</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>
    </style>
</resources>