<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Filter BottomSheetDialog  -->
    <style name="BottomSheetDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--  Filter TabLayout  -->
    <style name="TabWidget" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="tabTextAppearance">?headline2</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabSelectedTextColor">?grey_scale80</item>
        <item name="tabTextColor">?grey_scale60</item>
    </style>
</resources>